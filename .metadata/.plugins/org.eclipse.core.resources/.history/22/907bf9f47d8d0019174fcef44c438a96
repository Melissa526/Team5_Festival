--게시판용(자유,후기,이벤트) 테이블
--이름 , 게시글 번호, 카테고리, 그룹번호, 그룹순서, 제목, 내용, 작성일, 타이틀탭
DROP SEQUENCE POSTNUMSEQ;
DROP SEQUENCE GROUPNUMSEQ;
DROP TABLE BOARD;

CREATE SEQUENCE POSTNUMSEQ;
CREATE SEQUENCE GROUPNUMSEQ;

CREATE TABLE BOARD(
	CATEGORY NUMBER NOT NULL,
	POSTNUM NUMBER PRIMARY KEY,
	GROUP_NUM NUMBER,
	GROUP_ORDER NUMBER,
	TITLETAB NUMBER NOT NULL,
	WRITER VARCHAR2(30) NOT NULL,
	TITLE VARCHAR2(200) NOT NULL,
	CONTENT VARCHAR2(4000) NOT NULL,
	REGDATE DATE NOT NULL,
	VIEWS NUMBER NOT NULL
);

--1번 게시글
INSERT INTO BOARD
VALUES(3, POSTNUMSEQ.NEXTVAL, GROUPNUMSEQ.NEXTVAL, 1, 0, '송치윤', '1번', '1번 게시글 입니다', SYSDATE, 0  );

INSERT INTO BOARD
VALUES(3, POSTNUMSEQ.NEXTVAL, GROUPNUMSEQ.NEXTVAL, 1, 0, '송치윤', '2번', '1번 게시글 입니다', SYSDATE, 0 );

INSERT INTO BOARD
VALUES(3, POSTNUMSEQ.NEXTVAL, GROUPNUMSEQ.NEXTVAL, 1, 0, '송치윤', '3번', '1번 게시글 입니다', SYSDATE, 0 );

INSERT INTO BOARD
VALUES(3, POSTNUMSEQ.NEXTVAL, GROUPNUMSEQ.NEXTVAL, 1, 0, '송치윤', '4번', '1번 게시글 입니다', SYSDATE, 0 );


--이름 , 게시글 번호, 카테고리, 그룹번호, 그룹순서, 제목, 내용, 작성일, 타이틀탭

SELECT * FROM BOARD ORDER BY POSTNUM DESC,GROUP_NUM, GROUP_ORDER;
SELECT * FROM BOARD ORDER BY GROUP_NUM DESC, GROUP_ORDER;

	
SELECT * FROM BOARD 
WHERE CATEGORY = 1
AND (ROWNUM BETWEEN 1 AND 10);

SELECT * FROM BOARD ORDER BY POSTNUM DESC



SELECT SYSDATE FROM BOARD;
